extends sidebar

block stylesheets
  link(rel='stylesheet', href='/stylesheets/dashboard.css')

block scripts
  script(src="/javascripts/dashboard.js")

block authenticatedcontent
  form(action="/dashboard/posts/new" method="POST" id="new-post-form")
    div.form-group
      label
        b Conteúdo da Publicação
      textarea.form-control(type="text" id="new-post-form-textarea" maxlength="1000" name="text" autocomplete="off" required)
    button.btn.btn-primary(type="submit") Enviar
  .container-fluid(id="posts-container")
    each post in posts
      .card.mt-1
        if post.image
          img.card-img-top(src='...' alt='...')
        .card-body
          h5.card-title 
            =post.name
          h6.card-subtitle.mb-2.text-muted 
            =post.email
          p.card-text
            =post.text
